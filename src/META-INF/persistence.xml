<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	
	<persistence-unit name="Task">
	
		<!-- JPA Implementation (Provider) -->
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		
		<!-- Mapped entity -->
		<class>com.eduardoportfolio.tasks.model.Task</class>

		<properties>
		
			<!-- We do not need the Connection data below any more, because it is already in the 
			 spring-context.xml -->
			
	<!--<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/jdbc" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="password"/> -->
			
			<!-- Hibernate properties -->
			<!-- SQL dialect used in the application -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			
			<!-- All SQL generated by Hibernate appear on the console -->
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			
			<!-- Update DB, generate tables if necessary -->
			<property name="hibernate.hbm2ddl.auto" value="update" />
			
		</properties>
	</persistence-unit>
</persistence>

